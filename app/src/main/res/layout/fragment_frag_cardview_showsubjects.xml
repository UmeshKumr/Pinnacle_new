<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/s1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.parulchopra.pinnacle_new_app.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardview1"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:orientation="vertical"
                android:background="@color/holo_purple">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/t1"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:text="ENGLISH"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/i1"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/reas"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Comprehensive Lecture for SSC CGL"
                    android:gravity="center"

                    android:textSize="20dp"
                    android:id="@+id/t2"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="37 LESSONS"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:id="@+id/t3"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardview2"

            android:background="@android:color/holo_green_light">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:orientation="vertical"
                android:background="@android:color/holo_blue_light">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:id="@+id/t11"
                    android:text="MATH"
                    android:layout_marginBottom="20dp"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/i11"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/reas"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Comprehensive Lecture for SSC CGL"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:id="@+id/t12"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="25 CHAPTERS"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:id="@+id/t13"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardview3"

            android:background="@android:color/holo_purple">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:orientation="vertical"
                android:background="@android:color/holo_red_light">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:id="@+id/t21"
                    android:text="GK"
                    android:textSize="30dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:id="@+id/i21"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/reas"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Comprehensive Lecture for SSC CGL"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:id="@+id/t22"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="26 TOPICS"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:id="@+id/t23"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardview4"

            android:background="@android:color/holo_purple">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:orientation="vertical"
                android:background="@android:color/holo_green_dark">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:id="@+id/t31"
                    android:text="REASONING"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/i31"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/reas"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Comprehensive Lecture for SSC CGL"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:id="@+id/t32"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="37 LESSONS"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:id="@+id/t33"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>


